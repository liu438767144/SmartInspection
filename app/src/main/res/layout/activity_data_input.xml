<?xml version="1.0" encoding="utf-8"?>
<com.whut.smartinspection.widgets.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_tv_visible="true"
    app:right_tv_visible="true"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    app:left_tv_text="返回"
    app:right_tv_text="提交"
    app:right_btn_visible="false"
    app:title_visible="true"
    app:title_text="数据录入"
    tools:context="com.whut.smartinspection.activity.DataInputActivity">

    <TextView
        android:textSize="20dp"
        android:id="@+id/tv_data_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <com.wx.wheelview.widget.WheelView
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="#00000000"
        android:dividerHeight="50dp"
        android:descendantFocusability="afterDescendants"
        android:id="@+id/wheelview_data_input"
        android:minHeight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</com.whut.smartinspection.widgets.CustomToolBar>
